{
   "name": "graphql-ts-server-boilerplate",
   "version": "0.0.1",
   "description": "Awesome project developed with TypeORM.",
   "devDependencies": {
      "@types/bcryptjs": "^2.4.1",
      "@types/jest": "^22.2.3",
      "@types/node": "^10.0.9",
      "@types/uuid": "^3.4.3",
      "@types/yup": "^0.24.4",
      "gql2ts": "^1.8.0",
      "jest": "^22.4.3",
      "nodemon": "^1.17.4",
      "ts-jest": "^22.4.6",
      "ts-node": "6.0.3",
      "tslint": "^5.10.0",
      "tslint-config-prettier": "^1.12.0",
      "tslint-config-standard": "^7.0.0",
      "typescript": "2.8.3"
   },
   "dependencies": {
      "bcryptjs": "^2.4.3",
      "graphql": "^0.13.2",
      "graphql-import": "^0.5.2",
      "graphql-request": "^1.6.0",
      "graphql-tools": "^3.0.1",
      "graphql-yoga": "^1.13.1",
      "pg": "^7.4.3",
      "reflect-metadata": "^0.1.12",
      "typeorm": "0.2.5",
      "yup": "^0.24.1"
   },
   "scripts": {
      "start": "NODE_ENV=development nodemon --exec ts-node src/index.ts",
      "gen-schema-types": "gql2ts src/modules/register/schema.graphql -o src/types/schema.d.ts",
      "test": "NODE_ENV=test jest --forceExit"
   },
   "jest": {
      "transform": {
         "^.+\\.tsx?$": "ts-jest"
      },
      "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
      "moduleFileExtensions": [
         "ts",
         "tsx",
         "js",
         "jsx",
         "json",
         "node"
      ]
   }
}
